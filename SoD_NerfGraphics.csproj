<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	<PublicizerClearCacheOnClean>true</PublicizerClearCacheOnClean>
    <PublicizerLogFilePath>.\Krafs.publicizer.log</PublicizerLogFilePath>
	<PublicizerRuntimeStrategies>IgnoresAccessChecksTo</PublicizerRuntimeStrategies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BepInEx.Analyzers" Version="1.0.8">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="BepInEx.Core" Version="5.4.21" />
    <PackageReference Include="HarmonyX" Version="2.9.0" />
    <PackageReference Include="Krafs.Publicizer" Version="2.2.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
	
  <ItemGroup>
      <Publicize Include="Dew.Contents;Dew.Core;Dew.External;Dew.UI" IncludeCompilerGeneratedMembers="false" IncludeVirtualMembers="false" />
  </ItemGroup>
	
  <PropertyGroup>
	  <GameFolder>..\..\..\games\Shape.of.Dreams.v1.0.6.2</GameFolder>
	  <BepInExFolder>$(GameFolder)\BepInEx</BepInExFolder>
  </PropertyGroup>


  <ItemGroup>
    <Reference Include="Dew.Contents">
      <HintPath>$(GameFolder)\Shape of Dreams_Data\Managed\Dew.Contents.dll</HintPath>
    </Reference>
    <Reference Include="Dew.Core">
      <HintPath>$(GameFolder)\Shape of Dreams_Data\Managed\Dew.Core.dll</HintPath>
    </Reference>
    <Reference Include="Dew.External">
      <HintPath>$(GameFolder)\Shape of Dreams_Data\Managed\Dew.External.dll</HintPath>
    </Reference>
    <Reference Include="Dew.UI">
